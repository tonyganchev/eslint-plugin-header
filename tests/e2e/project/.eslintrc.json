{
    "root": true,
    "overrides": [
        {
            "files": ["index.ts"],
            "plugins": ["@tony.ganchev/header"],
            "rules": {
                "@tony.ganchev/header/header": [
                    "error",
                    {
                        "header": {
                            "commentType": "line",
                            "lines": [
                                " Copyright 1985",
                                " Tony Ganchev"
                            ]
                        },
                        "trailingEmptyLines": {
                            "minimum": 2
                        }
                    }
                ]
            }
        }
    ]
}
