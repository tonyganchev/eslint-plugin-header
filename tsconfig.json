{
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "coverage",
        "**/node_modules",
        "tests",
        "types"
    ],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "lib": [
            "DOM",
            "ES2021"
        ],
        "outDir": "types",
        "strict": true
    }
}
